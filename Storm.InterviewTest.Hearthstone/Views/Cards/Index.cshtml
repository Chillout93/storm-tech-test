@model Storm.InterviewTest.Hearthstone.Core.Features.Cards.Models.SearchModel
@{
    ViewBag.Title = "Home Page";
}

<div class="page-header">
    <h2>Cards (Total: @Model.Cards.Count())</h2>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="row" style="margin-bottom: 10px">       
            <div class="col-md-12">
                @using (Html.BeginForm("Index", "Cards", FormMethod.Post, new { @class = "form-inline" }))
                {
                    @Html.EnumDropDownListFor(x => x.SelectedPlayerClass, "-- Filter Class --", new { @class = "form-control" })
                    @Html.TextBoxFor(x => x.Query, new { @class = "form-control"})
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>    
                }
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <ul class="list-inline">
                    @foreach (var card in Model.Cards)
                    {
                        <li class="list-group-item">
                            <div class="col-md-12">
                                <a href="@Url.Action("Details", "Card", new { id = card.Id })"><img class="img-responsive img-thumbnail" src="@card.ImageUrl" alt="@card.Name" title="@card.Name" /></a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>